val a = 'a'
val b = 'b'

/// Expect: a b
printlnv2("$a $b")

/// Expect: false
printlnv2(a == b)
/// Expect: true
printlnv2(a == 'a')
/// Expect: false
printlnv2(b != b)
/// Expect: true
printlnv2(b != 'a')

// Test escape sequences in char literals
/// Expect: true
printlnv2('\\' == '\u005C')

val m = { 'a': 1, 'b': 2 }
/// Expect: { a: 1, b: 2 }
printlnv2(m)
/// Expect: Option.None
printlnv2(m['c'])
/// Expect: Option.Some(value: 1)
printlnv2(m['a'])

