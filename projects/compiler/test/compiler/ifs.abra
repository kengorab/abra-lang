// Condition bindings
val arr = [1, 2, 3, 4]
/// Expect: 101
println(if arr[0] |item| { item + 100 } else { 0 })
/// Expect: 0
println(if arr[5] |item| { item + 100 } else { 0 })

// Destructuring condition binding as tuple
(() => {
  val pairs = [("a", 1), ("b", 2)]
  // Statement
  if pairs[0] |(k, v)| {
    /// Expect: a 1
    println("$k $v")
  }

  // Expression
  val x = if pairs[0] |(k, v)| k.length + v else 0
  /// Expect: 2
  println(x)
})()