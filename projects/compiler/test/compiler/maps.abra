// Map#keys
(() => {
  val map1 = { a: 1, b: 2 }
  /// Expect: #{b, a}
  printlnv2(map1.keys())

  val map2 = { ((1, 1)): true, ((0, 1)): false }
  /// Expect: #{(0, 1), (1, 1)}
  printlnv2(map2.keys())
})()

// Map#values
(() => {
  val map1 = { a: 1, b: 2 }
  /// Expect: [2, 1]
  printlnv2(map1.values())

  val map2 = { ((1, 1)): true, ((0, 1)): false }
  /// Expect: [false, true]
  printlnv2(map2.values())
})()

// Map#entries
(() => {
  val map1 = { a: 1, b: 2 }
  /// Expect: #{("b", 2), ("a", 1)}
  printlnv2(map1.entries())

  val map2 = { ((1, 1)): true, ((0, 1)): false }
  /// Expect: #{((1, 1), true), ((0, 1), false)}
  printlnv2(map2.entries())
})()

// Map#iterator
(() => {
  val m = { a: 1, b: 2, c: 3 }
  val iter = m.iterator()

  /// Expect: Option.Some(value: ("c", 3))
  printlnv2(iter.next())
  /// Expect: Option.Some(value: ("b", 2))
  printlnv2(iter.next())
  /// Expect: Option.Some(value: ("a", 1))
  printlnv2(iter.next())
  /// Expect: Option.None
  printlnv2(iter.next())
  /// Expect: Option.None
  printlnv2(iter.next())
})()

