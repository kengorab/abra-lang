// Map#containsKey
(() => {
  val m = { (1): "a", (2): "b" }

  /// Expect: true
  printlnv2(m.containsKey(1))
  /// Expect: false
  printlnv2(m.containsKey(3))
})()

// Map#mapValues
(() => {
  val m1 = { (1): "abc", (2): "defg" }

  val m2 = m1.mapValues((_, v) => v + "!")
  /// Expect: { 1: abc!, 2: defg! }
  printlnv2(m2)

  val m3 = m1.mapValues((_, v) => v.length)
  /// Expect: { 1: 3, 2: 4 }
  printlnv2(m3)
})()

// Map#insert (also []= operator)
(() => {
  val m = { a: 1, b: 2 }
  m.insert("c", 3)
  m["d"] = 4
  /// Expect: { d: 4, c: 3, b: 2, a: 1 }
  printlnv2(m)

  val letters = ["e", "f", "g", "h", "i", "j", "l", "k", "m", "n", "o", "p", "q", "r", "s", "t", "u", "v", "w", "x", "y", "z"]
  for ch, idx in letters {
    m[ch] = idx + 4
  }
  // Map should have been resized
  /// Expect: { y: 24, w: 22, u: 20, s: 18, q: 16, o: 14, m: 12, k: 11, i: 8, g: 6, e: 4, c: 3, a: 1, z: 25, x: 23, v: 21, t: 19, r: 17, p: 15, n: 13, l: 10, j: 9, h: 7, f: 5, d: 4, b: 2 }
  printlnv2(m)
  /// Expect: false
  printlnv2(m._needsResize())
})()

// Map#get
(() => {
  val m = { (1): "a", (2): "b" }

  /// Expect: Option.Some(value: "a")
  printlnv2(m.get(1))
  /// Expect: Option.Some(value: "b")
  printlnv2(m.get(2))
  /// Expect: Option.None
  printlnv2(m.get(3))
})()

// Map#getOr
(() => {
  val m = { (1): "a", (2): "b" }

  /// Expect: a
  printlnv2(m.getOr(1, "c"))
  /// Expect: b
  printlnv2(m.getOr(2, "c"))
  /// Expect: c
  printlnv2(m.getOr(3, "c"))
})()

// Map#getOrElse
(() => {
  val m = { (1): "a", (2): "b" }

  /// Expect: a
  printlnv2(m.getOrElse(1, () => {
    printlnv2("calling default fn")
    "c"
  }))
  /// Expect: b
  printlnv2(m.getOrElse(2, () => {
    printlnv2("calling default fn")
    "c"
  }))
  /// Expect: calling default fn
  /// Expect: c
  printlnv2(m.getOrElse(3, () => {
    printlnv2("calling default fn")
    "c"
  }))
})()

// Map#update
(() => {
  val m = { (1): "a", (2): "b" }

  /// Expect: { 1: a, 2: b }
  printlnv2(m)

  val old1 = m.update(1, () => "A")
  /// Expect: { 1: A, 2: b }
  printlnv2(m)
  /// Expect: Option.Some(value: "a")
  printlnv2(old1)

  val old2 = m.update(4, () => "???")
  /// Expect: { 1: A, 2: b }
  printlnv2(m)
  /// Expect: Option.None
  printlnv2(old2)
})()

// Map#remove
(() => {
  val m = {
    a: 1,
    b: 2,
    c: 3,
    d: 4,
    s: 5,
    t: 6
  }
  /// Expect: { d: 4, t: 6, c: 3, s: 5, b: 2, a: 1 }
  printlnv2(m)

  /// Expect: Option.None
  printlnv2(m.remove("x"))
  /// Expect: 6
  printlnv2(m.size)

  /// Expect: Option.Some(value: 2)
  printlnv2(m.remove("b"))
  /// Expect: { d: 4, t: 6, c: 3, s: 5, a: 1 }
  printlnv2(m)
  /// Expect: 5
  printlnv2(m.size)

  // Kinda dirty, but needed in order to test removing keys with the same hash
  /// Expect: true
  printlnv2(m._getKeyHash("c") == m._getKeyHash("s"))

  /// Expect: Option.Some(value: 5)
  printlnv2(m.remove("s"))
  /// Expect: { d: 4, t: 6, c: 3, a: 1 }
  printlnv2(m)
  /// Expect: 4
  printlnv2(m.size)
  /// Expect: Option.Some(value: 3)
  printlnv2(m.remove("c"))
  /// Expect: { d: 4, t: 6, a: 1 }
  printlnv2(m)
  /// Expect: 3
  printlnv2(m.size)

  /// Expect: true
  printlnv2(m._getKeyHash("d") == m._getKeyHash("t"))

  /// Expect: Option.Some(value: 4)
  printlnv2(m.remove("d"))
  /// Expect: { t: 6, a: 1 }
  printlnv2(m)
  /// Expect: 2
  printlnv2(m.size)
  /// Expect: Option.Some(value: 6)
  printlnv2(m.remove("t"))
  /// Expect: { a: 1 }
  printlnv2(m)
  /// Expect: 1
  printlnv2(m.size)
})()
