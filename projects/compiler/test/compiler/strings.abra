// Test literal construction
/// Expect: hello
println("hello")

// + operator
(() => {
  /// Expect: helloworld
  println("hello" + "world")
  /// Expect: hello12
  println("hello" + 12)
  /// Expect: 12hello
  println(12 + "hello")
  /// Expect: hello1.23
  println("hello" + 1.23)
  /// Expect: 1.23hello
  println(1.23 + "hello")
  /// Expect: hellotrue
  println("hello" + true)
  /// Expect: truehello
  println(true + "hello")
  /// Expect: hello[1, 2, 3]
  println("hello" + [1, 2, 3])
  /// Expect: [1, 2, 3]hello
  println([1, 2, 3] + "hello")
})()

// == operator (also String#eq)
(() => {
  val s1 = "string"
  /// Expect: true
  println(s1 == s1)
  /// Expect: true
  println(s1 == "string")

  /// Expect: false
  println(s1 != s1)
  /// Expect: true
  println(s1 != "string!")
})()

// Interpolation
(() => {
  val array = [1, 2, 3]
  /// Expect: length of [1, 2, 3] is 3
  println("length of $array is ${array.length}")
})()

// String#replaceAll(pattern: String, replacement: String)
(() => {
  /// Expect: LLaaLLa
  println("laala".replaceAll("l", "LL"))

  /// Expect: aaLLaLL
  println("aalal".replaceAll("l", "LL"))

  /// Expect: LLaaLLaLL
  println("laalal".replaceAll("l", "LL"))

  /// Expect: feebar
  println("foobar".replaceAll("o", "e"))

  /// Expect: fexexbar
  println("foobar".replaceAll("o", "ex"))

  /// Expect: foobar
  println("foobar".replaceAll("x", "yz"))

  /// Expect: -ä
  println("/ä".replaceAll("/", "-"))

  /// Expect: xfxoxox
  println("foo".replaceAll("", "x"))

  /// Expect: x
  println("".replaceAll("", "x"))

  /// Expect: abcd
  println("abcd".replaceAll("", ""))

  /// Expect: fa bar baaz
  println("foo boor booooz".replaceAll("oo", "a"))

  // /// Expect: "hello"
  // println("\"hello\"".replaceAll("\"", "\\\""))
})()

// String#chars
(() => {
  val chars = "hello".chars()
  /// Expect: h 0
  /// Expect: e 1
  /// Expect: l 2
  /// Expect: l 3
  /// Expect: o 4
  for ch, idx in chars {
    println("$ch $idx")
  }

  /// Expect: done
  println("done")
})()

// Indexing (also String#get(index: Int))
(() => {
  val s1 = "abc"

  /// Expect: |  a b c a b c  |
  println("| ${s1[-4]} ${s1[-3]} ${s1[-2]} ${s1[-1]} ${s1[0]} ${s1[1]} ${s1[2]} ${s1[3]} |")

  val s2 = "hello"

  /// Expect: h e l l o
  println("${s2[0]} ${s2[1]} ${s2[2]} ${s2[3]} ${s2[4]}")

  /// Expect: o l l e h
  println("${s2[-1]} ${s2[-2]} ${s2[-3]} ${s2[-4]} ${s2[-5]}")

  /// Expect:   end
  println("${s2[5]} ${s2[-6]} end")
})()

// Range indexing (also String#getRange(startIndex: Int, endIndex: Int))
(() => {
  val s = "hello"

  /// Expect: ell ell
  println("${s[1:4]} ${s[-4:4]}")

  /// Expect:  end
  println("${s[1:1]} end")

  val a = 1
  val b = 4

  /// Expect: ell ell
  println("${s[a:b]} ${s[-b:b]}")

  /// Expect: ello h
  println("${s[1:]} ${s[:1]}")

  /// Expect: ello h
  println("${s[a:]} ${s[:a]}")
})()

// String#hash
(() => {
  val empty = ""
  /// Expect: true
  println(empty.hash() == "".hash())

  val nonEmpty = "hello"
  /// Expect: true
  println(nonEmpty.hash() == "hello".hash())
})()

// String#isEmpty
(() => {
  val empty = ""
  /// Expect: true
  println(empty.isEmpty())

  val nonEmpty = "hello"
  /// Expect: false
  println(nonEmpty.isEmpty())
})()

// String#toLower
(() => {
  /// Expect: ||
  println("|" + "".toLower() + "|")
  /// Expect: -hello!
  println("-hElLo!".toLower())
})()

// String#toUpper
(() => {
  /// Expect: ||
  println("|" + "".toUpper() + "|")
  /// Expect: -HELLO!
  println("-hElLo!".toUpper())
})()

// String#split
(() => {
  /// Expect: [a, s, d, f]
  println("a s d f".split(by: " "))

  /// Expect: [, a, b, c d]
  println("  a  b  c d".split("  "))

  /// Expect: [a, s, d, f]
  println("asdf".split(""))

  /// Expect: [a, s, d, f]
  println("a\ns\nd\nf".split("\n"))

  /// Expect: [asdf]
  println("asdf".split("qwer"))
})()

// String#lines
(() => {
  /// Expect: [a s d f]
  println("a s d f".lines())

  /// Expect: []
  println("".lines())

  /// Expect: [a, s, d, f]
  println("a\ns\nd\nf".lines())
})()

// String#startsWith
(() => {
  /// Expect: true
  println("".startsWith(""))
  /// Expect: true
  println("hello".startsWith(""))
  /// Expect: true
  println("hello".startsWith("he"))
  /// Expect: true
  println("hello".startsWith("hello"))
  /// Expect: false
  println("hello".startsWith("hex"))
  /// Expect: false
  println("hello".startsWith("hhello"))
})()

// String#endsWith
(() => {
  /// Expect: true
  println("".endsWith(""))
  /// Expect: true
  println("hello".endsWith(""))
  /// Expect: true
  println("hello".endsWith("lo"))
  /// Expect: true
  println("hello".endsWith("hello"))
  /// Expect: false
  println("hello".endsWith("lo!"))
  /// Expect: false
  println("hello".endsWith("hhello"))
})()

