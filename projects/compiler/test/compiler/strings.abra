// String#repeat
(() => {
  /// Expect: ||
  println("|" + "abc".repeat(0) + "|")

  /// Expect: ||
  println("|" + "abc".repeat(-1) + "|")

  /// Expect: abcabcabc
  println("abc".repeat(3))
})()
