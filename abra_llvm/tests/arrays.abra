// Test raw construction of array
val a1 = Array<Int>(length: 0, _buffer: Pointer.malloc<Int>(1), _capacity: 1)
a1.push(12)
/// Expect: [12]
println(a1)

// Test array literal construction
val a2: Int[] = []
/// Expect: []
println(a2)

val a3 = [1, 2, 3, 4]
/// Expect: [1, 2, 3, 4]
println(a3)

val a4 = [0.12, 3.45, 6.0]
/// Expect: [0.12, 3.45, 6]
println(a4)

val a5 = ["ab", "cd", "ef"]
/// Expect: [ab, cd, ef]
println(a5)

val a6 = [[1, 2], [3, 4], [5, 6]]
/// Expect: [[1, 2], [3, 4], [5, 6]]
println(a6)

// Array#pop()
val a7 = [1, 2, 3]
/// Expect: 3
println(a7.pop())
/// Expect: [1, 2]
println(a7)

/// Expect: 2
println(a7.pop())
/// Expect: [1]
println(a7)

/// Expect: 1
println(a7.pop())
/// Expect: []
println(a7)

/// Expect: None
println(a7.pop())
/// Expect: []
println(a7)

// Array#join
val a8 = [123, 456, 789]
/// Expect: 123|456|789
println(a8.join("|"))
