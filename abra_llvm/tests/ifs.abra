// If statements

/// Expect: here 1
if 1 < 4 {
  echo<String>("here 1")
} else {
  echo<String>("here 2")
}

/// Expect: here 2
if 1 > 4 {
  echo<String>("here 1")
} else {
  echo<String>("here 2")
}

/// Expect: here 3
if 1 > 4 {
  echo<String>("here 1")
} else if 2 > 4 {
  echo<String>("here 2")
} else {
  echo<String>("here 3")
}

// If expressions

val a = if 1 > 0 123 else 456
/// Expect: 123
echo<Int>(a)

val b = (if 1 < 0 123 else 456) + 1000
/// Expect: 1456
echo<Int>(b)

val c = if true { 123 } else { None }
/// Expect: 123
echo<Int?>(c)

val d = if false { 123 } else { None }
/// Expect: None
echo<Int?>(d)

/// Expect: 123
echo<Int?>(if true { 123 })

/// Expect: None
echo<Int?>(if false { 123 })

/// Expect: None
echo<Int?>(if true { None } else { 1 + 2 })
/// Expect: 3
echo<Int?>(if true { 1 + 2 } else { None })
